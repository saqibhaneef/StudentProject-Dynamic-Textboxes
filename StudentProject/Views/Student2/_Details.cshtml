@model StudentProject.Models.Student


@{
    Layout = null;
}

<div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
<div class="col-md-12 input-group">
                <div class="col-md-6 p-1">
                    <input asp-for="Id" hidden/>
                    <div class="form-group">
                        <label>First Name</label>
                        <input class="form-control" asp-for="FirstName" id="FirstName" placeholder="First Name" readonly/>
                    </div>
                </div>
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input class="form-control" asp-for="LastName" id="LastName" placeholder="LastName" readonly/>
                    </div>
                </div>
            </div>            
            <div class="col-sm-12 input-group">                
                    <div class="form-group col-md-6 p-1">
                        <label>Father Name</label>
                        <input class="form-control" asp-for="FatherName" id="FatherName" placeholder="Father Name" readonly/>
                    </div>
                    <div class="form-group col-md-6 p-1">
                        <label>Class</label>
                        <input class="form-control" asp-for="Class" id="Class" placeholder="Class" readonly/>
                    </div>
                
            </div>
            <div class="col-md-12 input-group">
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label>City</label>
                        <input class="form-control" asp-for="City" id="City" placeholder="City" readonly/>
                    </div>
                </div>  
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label>Country</label>
                        <input class="form-control" asp-for="Country" id="Country" placeholder="Country" readonly/>
                    </div>
                </div>
            </div>
            <div class="col-md-12 p-1" id="address"> 
               @if (Model.addresses.Count() > 0)
              {        
                  foreach (var item in Model.addresses)
                  {
                       <div class="input-group p-1 rowDiv"><input type="text" style="width:90%" id="address" name="address" value="@item.Name"  class="form-control p-1 address" readonly/></div>
                  }                                                                  
              }
            </div>
             </div>
            <div class="modal-footer">
        <button type="button" class="btn btn-secondary close" data-bs-dismiss="modal">Close</button>        
        <button type="submit" class="btn btn-primary" id="btnUpdate">Save</button>
    </div>
 